                                #        icon: "language-python"
                                #    RightCheckbox:
                                #OneLineAvatarIconListItem:
                                #    text:"registro 3"
                                #    IconLeftWidget:
                                #        icon: "language-python"
                                #    RightCheckbox:
                Screen2:
                Screen3:
        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 0, 0, 0)
            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer

